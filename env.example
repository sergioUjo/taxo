# Environment Variables Setup
# Copy these to your .env.local file

# Next.js App URL (for API calls from Convex)
# Use your deployed URL in production, localhost for development
APP_URL=http://localhost:3000

# Convex environment variables (automatically set by Convex)
CONVEX_DEPLOYMENT=your_deployment_name
NEXT_PUBLIC_CONVEX_URL=https://your_convex_url

# Optional: Python service URL if running separately
PYTHON_SERVICE_URL=http://localhost:8000
